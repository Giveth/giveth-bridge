{
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier", "prettier/standard"],
    "rules": {
        "no-underscore-dangle": 0,
        "import/order": "off",
        "no-plusplus": "off",
        "no-param-reassign": [1, { "props": true, "ignorePropertyModificationsFor": ["context"] }],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used",
                "ignoreRestSiblings": true,
                "argsIgnorePattern": "^_"
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "trailingComma": "all",
                "printWidth": 100
            }
        ]
    }
}
